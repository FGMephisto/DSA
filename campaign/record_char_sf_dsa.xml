<?xml version="1.0" encoding="iso-8859-1"?>

<root version="2.0">

	<windowclass name="charsheet_sf">
		<placement>
			<size>
				<width>252</width>
				<height>611</height>
			</size>
		</placement>
		<nodelete />
		<sheetdata>
			<frame_char name="sfframe">
				<bounds>15,90,465,500</bounds>
			</frame_char>
				
			<stringcontrol>
				<anchored>
					<to>sfframe</to>
					<position>insidetopleft</position>
					<offset>180,9</offset>
				</anchored>
				<font>sheetlabelsmallbold</font>
				<static>Sonderfertigkeiten</static>
			</stringcontrol>			
			
				
			<stringcontrol>
				<anchored>
					<to>sfframe</to>
					<position>insidetopleft</position>
					<offset>23,29</offset>
				</anchored>
				<font>sheetlabelsmall</font>
				<static>Sonderfertigkeit</static>
			</stringcontrol>
			
			<stringcontrol>
				<anchored>
					<to>sfframe</to>
					<position>insidetopleft</position>
					<offset>140,29</offset>
				</anchored>
				<font>sheetlabelsmall</font>
				<static>Stufe</static>
			</stringcontrol>
			
			<stringcontrol>
				<anchored>
					<to>sfframe</to>
					<position>insidetopleft</position>
					<offset>180,29</offset>
				</anchored>
				<font>sheetlabelsmall</font>
				<static>Bemerkung</static>
			</stringcontrol>			
			
			<windowlist name="list_sf">
				<anchored>
					<to>sfframe</to>
					<position>over</position>
					<offset>-8,-40</offset>
				</anchored>
				<datasource>.sonderfertigkeiten</datasource>
				<class>charsheet_listitem_sf</class>
				<allowcreate />
				<allowdelete />				
				<script> 
					function onSortCompare(w1, w2)
						if w1.label.getValue() == "" then
							return true;
						elseif w2.label.getValue() == "" then
							return false;
						end

						return w1.label.getValue() > w2.label.getValue();
					end				
				
					function onInit() 
						local list = getDatabaseNode().createChild("sonderfertigkeiten");	
						local count = list.getChildCount();
						if count == 0 then
							local default = list.createChild("default");
						end					
					end
				</script>
			</windowlist>	

		</sheetdata>		
	</windowclass>
	
	<windowclass name="charsheet_listitem_sf">
		<sizelimits>
			<minimum>
				<height>18</height>
			</minimum>
		</sizelimits>		
		<sheetdata>
			<stringfield name="label">
				<anchored>
					<left>
						<anchor>left</anchor>
						<offset>12</offset>
					</left>				
					<top>
						<anchor>top</anchor>
						<offset>2</offset>
					</top>
					<size>
						<width>120</width>
					</size>
				</anchored>
				<font>sheetlabelsmall</font>
				<frame>
					<name>textline</name>
					<offset>0,5,0,0</offset>
				</frame>
			</stringfield>	
			
			<stringfield name="stufe">
				<anchored>
					<left>
						<parent>label</parent>						
						<anchor>right</anchor>
						<offset>5</offset>
					</left>				
					<top>
						<parent>label</parent>						
						<anchor>top</anchor>
						<offset>0</offset>
					</top>
					<size>
						<width>20</width>
					</size>
				</anchored>
				<font>sheetlabelsmall</font>
				<center/>
				<frame>
					<name>textline</name>
					<offset>0,5,0,0</offset>
				</frame>
			</stringfield>	
			
			<stringfield name="bemerkung">
				<anchored>
					<left>
						<parent>stufe</parent>						
						<anchor>right</anchor>
						<offset>5</offset>
					</left>				
					<top>
						<parent>stufe</parent>						
						<anchor>top</anchor>
						<offset>0</offset>
					</top>
					<size>
						<width>255</width>
					</size>
				</anchored>
				<font>sheetlabelsmall</font>
				<frame>
					<name>textline</name>
					<offset>0,5,0,0</offset>
				</frame>
			</stringfield>				
		</sheetdata>
	</windowclass>		
</root>